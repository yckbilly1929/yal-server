{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["./dist", "./node_modules", ".vscode", ".pnpm-store", "npm", "build"]
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "trailingComma": "all"
    },
    "globals": ["$", "_"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noBlankTarget": "warn"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "style": {
        "noParameterAssign": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 120,
    "formatWithErrors": false
  }
}
