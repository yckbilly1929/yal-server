{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2021",
    "module": "CommonJS",
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": false,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
